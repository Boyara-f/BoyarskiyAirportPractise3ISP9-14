<Page x:Class="BoyarskiyAirport.Pages.PlanePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BoyarskiyAirport.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PlanePage">

    <Grid>
        <DataGrid x:Name="dataGrid" IsEnabled="False"
                  AutoGenerateColumns="False"             
                 >
            <DataGrid.Columns >
                <DataGridTextColumn Header="ID"  Binding="{Binding id }"/>
                <DataGridTextColumn Header="Aircompany"  Binding="{Binding Aircompany.AircompanyName }"/>
                <DataGridTextColumn Header="Aircompany"  Binding="{Binding idAircompany }"/>
                <DataGridTextColumn Header="ModelName"  Binding="{Binding  PlaneModel }"/>
                <DataGridTextColumn Header="PlaneNumber"  Binding="{Binding PlaneNumber }"/>
               

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
